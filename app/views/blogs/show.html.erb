<div class="page-content">
  <%= link_to "Go to the #{@subblog.name} subblog", subblog_path(@subblog), class: "btn btn-primary" %>
  <br/><br/>
  <h1><%= @blog.title %></h1>
  <div class="user-profile-link">
    <%= "#{@blog.time_since_post} by " %>
    <%= link_to "#{@blog.user.username}", user_path(@blog.user), class: "make-it-green" %>
  </div>
  <div class="box col-7 blog-content">
    <%= @blog.content %>
  </div>
</div>
