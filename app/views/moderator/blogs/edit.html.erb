<div class="container">
  <div class="box col-10">
    <%= simple_form_for @blog, url: moderator_subblog_blog_path(@subblog, @blog) do |f|%>
      <%= f.input :title %>
      <br/>
      <%= f.input :content, label: "Edit Your Comment", class: "edit-lable" %>
      <%= f.submit 'Post Edit', class: 'btn btn-primary make-it-green' %>
    <% end %>
  </div>
</div>
