<div class="container">
  <div class="box col-10">
    <h2>Make a Blog Post</h2>
    <%= simple_form_for @blog, url: moderator_subblog_blogs_path(@subblog) do |f|%>
      <%= f.input :title %>
      <br/>
      <%= f.input :content %>
      <%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
